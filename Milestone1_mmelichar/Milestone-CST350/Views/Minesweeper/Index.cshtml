@model Minesweeper.Models.GameModel

<!DOCTYPE html>
<html>
<head>
    <title>Minesweeper</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/Content/site.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h1>Minesweeper</h1>

        <div class="row">
            <div class="col-md-6">
                <p>Flags remaining: @Model.FlagsRemaining</p>
            </div>
            <div class="col-md-6">
                <p>Time elapsed: @Model.TimeElapsed</p>
            </div>
        </div>

        <table>
            @for (int i = 0; i < Model.Height; i++)
            {
                <tr>
                    @for (int j = 0; j < Model.Width; j++)
                    {
                        <td>
                            <button type="button" class="square @Model.Board[i, j].Status" onclick="revealSquare(@i, @j)">@Model.Board[i, j].DisplayValue</button>
                        </td>
                    }
                </tr>
            }
        </table>

        <script src="~/Scripts/jquery-3.6.0.min.js"></script>
        <script src="~/Scripts/game.js"></script>
    </div>
</body>
</html>
