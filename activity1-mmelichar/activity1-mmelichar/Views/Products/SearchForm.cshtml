@model IEnumerable<activity1_mmelichar.Models.ProductModel>

@using (Html.BeginForm("searchResults", "Products", FormMethod.Get, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <h4>Search Form</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.Label("searchTerm", "Search keywords", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("searchTerm", null, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" name="searchButton" value="Search" class="btn btn-default" />
        </div>
    </div>

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
}