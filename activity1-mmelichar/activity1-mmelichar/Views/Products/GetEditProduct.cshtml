@model activity1_mmelichar.Models.ProductModel

<h1>Edit Product</h1>

<form asp-controller="Products" asp-action="UpdateProduct" method="post" asp-antiforgery="true">
    <input type="hidden" asp-for="Id" name="Id" />
    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" name="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price">Price:</label>
        <input asp-for="Price" name="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description">Description:</label>
        <textarea asp-for="Description" name="Description" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
</form>
